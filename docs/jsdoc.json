{
  "source": {
    "include": ["src/js", "src/helios-network.js"],
    "includePattern": ".js$",
    "exclude": ["node_modules", "dist", "build"]
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/jsdoc-typeof-plugin",
    "node_modules/better-docs/category"
  ],
  "markdown": {
    "idInHeadings": true
  },
  "opts": {
    "template": "./node_modules/better-docs",
    "encoding": "utf8",
    "destination": "./docs/api",
    "recurse": true,
    "verbose": true
  },
  "templates": {
    "better-docs": {
      "name": "Helios Network API"
    }
  }
}
